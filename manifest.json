{
  "manifest_version": 3,
  "name": "Return policy highlighter",
  "version": "0.5",
  "description": "Highlights return policy of items on amazon and flpkart.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.ca/*",
        "https://www.amazon.com/*",
        "https://www.amazon.com.mx/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.de/*",
        "https://www.amazon.es/*",
        "https://www.amazon.in/*",
        "https://www.flipkart.com/*"
      ],
      "js": ["content.js"]
    }
  ]
}
